    .overlay {
      display: block;
      position: absolute;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: #000;
      opacity: .65;
      z-index: 2;
      filter: alpha(opacity=75);
    }
  }

  .parallax_fixed_text {
    .content {
      position: absolute;
      top: -28px;
      left: 15px;
      min-width: 307px;
