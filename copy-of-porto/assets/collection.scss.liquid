}

.collection-content {
  -ms-flex-order: 1;
  order: 1;
}

.product-layout-list {
  .product-image-area {
    width: 26%;
    float: left;

    a.quickview-icon {display: inline-block;}
  }

  .details-area {
    width: 74%;
    margin-top: 10px;
    padding: 0 20px;
    float: left;
    text-align: left;

    .product-name {
      font-size: 18px;
      line-height: 1;
    }

    .ratings {
      margin: 10px 0;
      background: none;
    }

    .product-short-desc {
      display: block;
      color: #777;
      font-size: 14px;
      line-height: 1.5;
    }

    .actions {
      margin: 0;

      .action-list {
        margin-right: 3px;

        a.link-wishlist {
          right: 0 !important;
          transition: inherit;
          opacity: 1 !important;
          visibility: visible !important;
        }

        &.addtocart {
          margin-right: 4px;
          float: left;
        }
      }

      a.link-compare {
        left: 0 !important;
        transition: inherit;
        opacity: 1 !important;
        visibility: visible !important;
      }
    }
  }
}