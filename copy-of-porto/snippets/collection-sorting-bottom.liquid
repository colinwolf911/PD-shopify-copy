<!-- /snippets/collection-sorting.liquid -->
{% if settings.collection_infinite_scrolling != blank %}
  {% if paginate.next %}
    <div class="infinite-loader" data-mode={{settings.collection_infinite_mode}} data-getfrom={{ paginate.next.url }}>
      {%- if settings.collection_infinite_mode == 'byscroll' -%}
      <span class="btn-load-more" style="display: none;" {% if settings.enable_multilang %}data-translate="collections.general.loading"{% endif %}>{{ 'collections.general.loading' | t}} ...</a>
      {% else %}
      <a href="javascript;" class="btn-load-more" {% if settings.enable_multilang %}data-translate="collections.general.show_more"{% endif %}>{{ 'collections.general.show_more' | t}} ...</a>
      {%- endif -%}
    </div>
  {% endif %}
{% else %}
<div class="toolbar-bottom">
  <div class="toolbar">
    <div class="collection-sorting-row">
      {% if paginate.pages > 1 %}
        <div class="pagenav-wrap">
          <div class="pagination">
            {% include 'pagination-page' %}
          </div>
        </div>
      {% endif %}
      <div class="limited-wrap">
        <div class="limited-view select-new">
          <div class="select-inner">
            <span {% if settings.language_enable %}data-translate="collections.limiter.title"{% endif %}>{{ 'collections.limiter.title' | t }}: </span>
            <select name="limiter" class="field bootstrap-select">
              <option value="{{settings.collection_products_count}}" {% if template == 'collection' %}selected="selected"{% endif %}>{{settings.collection_products_count}}</option>
              <option value="24" {% if template == 'collection.24' %}selected="selected"{% endif %}>24</option>
              <option value="36" {% if template == 'collection.36' %}selected="selected"{% endif %}>36</option>
              <option value="all" {% if template == 'collection.all' %}selected="selected"{% endif %} {% if settings.language_enable %}data-translate="collections.limiter.limit_all"{% endif %}>{{ 'collections.limiter.limit_all' | t }}</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}