<!-- config color -->
<style>
#parallax-slider-{{ section.id }} .parallax-slider h2{
  color:{{ section.settings.text_1_color }};
}
#parallax-slider-{{ section.id }} .parallax-slider p{
  color: {{ section.settings.text_2_color }}
}
#parallax-slider-{{ section.id }} .parallax-slider a{
  color: {{ section.settings.text_buton_color }};
}
#parallax-slider-{{ section.id }} .parallax-slider a:hover{
  color: {{ section.settings.text_buton_hover_color }};
}
</style>
<!-- end config color -->
<div data-section-id="{{ section.id }}" data-section-type="parallax-slider-section">
  <div id="parallax-slider-{{ section.id }}" class="parallax-wrapper" style="margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    {%- if section.settings.image != blank -%}
    {%- assign bg_url = section.settings.image | img_url: 'master' -%}
    {%- else -%}
    {%- assign bg_url = 'bg1920x1307.png' | asset_url -%}
    {%- endif -%}
    <div class="parallax lazyload lazypreload" data-stellar-background-ratio="0.5" data-bg="{{ bg_url }}">
      <div class="overlay overlay-color"></div>
      <div class="parallax-slider">
        <div class="container">
          <div class="data-carousel"
               data-auto="{{ section.settings.autoplay }}"
               data-items="1"
               data-paging="{{ section.settings.paging }}"
               data-margin="0" style="display: none;"></div>
          <div class="owl-carousel owl-carousel-lazy">
            {%- for block in section.blocks -%}
            <div class="item">
              {%- if block.settings.text_slide_1 != blank -%}
              <h2>
                <span class="lang1">{{ block.settings.text_slide_1 | split: '[lang2]' | first }}</span>
                {%- if settings.language_enable -%}
                <span class="lang2">{{ block.settings.text_slide_1 | split: '[lang2]' | last }}</span>
                {%- endif -%}
              </h2>
              {%- endif -%}
              {%- if block.settings.text_slide_2 != blank -%}
              <p>
                <span class="lang1">{{ block.settings.text_slide_2 | split: '[lang2]' | first }}</span>
                {%- if settings.language_enable -%}
                <span class="lang2">{{ block.settings.text_slide_2 | split: '[lang2]' | last }}</span>
                {%- endif -%}
              </p>
              {%- endif -%}
              {%- if block.settings.button_content != blank -%}
              <a href="{{ block.settings.link }}" class="btn btn-default">
                <span class="lang1">{{ block.settings.button_content | split: '|' | first }}</span>
                {%- if settings.language_enable -%}
                <span class="lang2">{{ block.settings.button_content | split: '|' | last }}</span>
                {%- endif -%}
              </a>
              {%- endif -%}
            </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
