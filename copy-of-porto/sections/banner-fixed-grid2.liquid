<div data-section-id="{{ section.id }}" data-section-type="banner-fixed-section">
  <div class="banner-fixed-2-{{section.id}}" style="background-color:{{section.settings.bg_section_color}}; margin-top: {{section.settings.margin_top | remove: 'px' | append: 'px' }};margin-bottom: {{section.settings.margin_bottom | remove: 'px' | append: 'px' }};padding: {{section.settings.section_padding}};">
    <div class="container">
      <div class="banner_fixed_grid_2">
        <div class="row">
          <div class="col-lg-3 col-md-6 col-6 column">
            <a href="{{ section.settings.banner_link_1 }}" class="image-link">
              {%- if section.settings.banner_image_1 != blank -%}
              <img data-src="{{ section.settings.banner_image_1 | img_url: 'master' }}"/>
              {%- else -%}
              <img data-src="{{ 'image-baner273x240.png' | asset_url }}"/>
              {%- endif -%}
            </a>
          </div>
          <div class="col-lg-3 col-md-6 col-6 order-lg-last column">
            <a href="{{ section.settings.banner_link_2 }}" class="image-link">
              {%- if section.settings.banner_image_2 != blank -%}
              <img data-src="{{ section.settings.banner_image_2 | img_url: 'master' }}"/>
              {%- else -%}
              <img data-src="{{ 'image-baner273x240.png' | asset_url }}"/>
              {%- endif -%}
            </a>
          </div>
          <div class="col-lg-6 col-md-12 col-12 column">
            <a href="{{ section.settings.banner_link_3 }}" class="image-link">
              {%- if section.settings.banner_image_3 != blank -%}
              <img data-src="{{ section.settings.banner_image_3 | img_url: 'master' }}"/>
              {%- else -%}
              <img data-src="{{ 'image-baner562x240.png' | asset_url }}"/>
              {%- endif -%}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
